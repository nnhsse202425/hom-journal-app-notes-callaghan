{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Node Server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "outputCapture": "std"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Node Client",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/assets",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug example.js",
      "program": "${workspaceFolder}/example.js"
    }
  ]
}
